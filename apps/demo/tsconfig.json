{
  "exclude": ["node_modules"],
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "components/*": ["src/components/*"]
    },
    "types": ["vitest/globals"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
